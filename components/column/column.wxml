<view class='column-wrap' style='margin-top:{{MT}}px;margin-bottom:{{MB}}px;'>
  <block wx:for="{{column}}" wx:key="{{key}}">
    <view class='column-row'>
      <block  wx:for="{{item}}" wx:key="{{key}}" wx:for-index="idx">
        <view class='column-item' style='width:{{(1/nub[index])*100}}%'>
          <image src="{{item.img}}" mode='widthFix'></image>
          <text style='color:{{textColor}}'>{{item.text}}</text>
        </view>
      </block>
    </view>
  </block>
</view>
