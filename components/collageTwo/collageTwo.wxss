@import "../../assets/css/icon.wxss";
.collage-item{
  padding: 30rpx;
}
.info{
  margin-bottom: 30rpx;
  display: flex;
}
.info image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  margin-right: 30rpx;
}
.info>view{
  flex: 1;
}
.info .title{
  color: #3a3f42;
  font-size: 24rpx;
   display: -webkit-box !important;
  overflow: hidden;
  
  text-overflow: ellipsis;
  word-break: break-all;
  
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.price{
  color: #bbbbbb;
  font-size: 24rpx;
}
.endtime{
  font-size: 22rpx;
  display: flex;
  color: #bbbbbb;
  margin:16rpx 0;
}
.endtime .time{
  background: #ffb5b6;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  margin: 0 4rpx;
  border-radius: 8rpx;
  color: white;
}
button{
  line-height: 46rpx;
  background: #fe0000;
  color: white;
  font-size: 21rpx;
  padding: 0 14rpx;
}
.pin{
  display: flex;
  justify-content: space-between;
  text-align: center;
}
.pin-item{
  display: flex;
  flex-direction: column;
}