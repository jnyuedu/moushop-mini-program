@import "../../assets/css/icon.wxss";
.seckill-nav{
  width: fit-content;
  background: #e1115f;
}
.seckill-nav::after,.seckill-inner::after{
  clear: both;
  display: block;
  content: " "
}
.seckill-nav>view{
  float: left;
  color: white;
  display: flex;
  width:120rpx;
  flex-direction: column;
  padding-bottom: 10rpx;
  padding: 14rpx 30rpx;
  text-align: center;
  font-size: 38rpx;
  background: #e1115f;
}
.seckill-nav>view.active{
  background: #fc3b32;
}
.seckill-inner{
  position: relative;
}
.item-wrap{
  width:750rpx;
  float: left;
  padding: 30rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.seckill-item{
  margin-bottom: 30rpx;
  display: flex;
  overflow: hidden;
}
.seckill-item image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx; 
  margin-right: 30rpx;
  flex: 1;
}
.seckill-item>view{
  /* flex: 1; */
  width: 460rpx;
  display: flex;
  flex-direction: column;
}
.seckill-item .title{
  display: block;
  color: #3a3f42;
  font-size: 28rpx;
  white-space: nowrap; 
  width: 460rpx;
  overflow: hidden;
  text-overflow: ellipsis; 
}
.seckill-item .subtitle{
  color: #cccccc;
  width: 460rpx;
  display: block;
  font-size: 21rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.price{
  color: #bbbbbb;
  font-size: 24rpx;
}
button{
  line-height: 46rpx;
  background: #fe0000;
  color: white;
  font-size: 21rpx;
  padding: 0 14rpx;
}